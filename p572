#include <bits/stdc++.h>

using namespace std;

char mat[110][110];

int vx[4]{-1,0,0,1};
int vy[4]{0,-1,1,0};

void floodfill(int x,int y,int i,int j)
{
	int px,py;
	
	mat[i][j]='1';
	
	for(int k=0;k<4;k++)
	{
		px=i+vx[k];
		py=j+vy[k];
		if(mat[px][py]=='@' and px>=0 and px<x and py>=0 and py<y)
		{
			
		}
	}
	
}

int main()
{
	int x,y;
	
	cin>>x>>y;
	while(x!=0 and y!=0)
	{
		int bolsao;
		
		for(int i=0;i<x;i++)
			for(int j=0;j<y;j++)
				cin>>mat[i][j];
		
		for(int i=0;i<x;i++)
		{
			for(int j=0;j<y;j++)
			{
				if(mat[i][j]=='@')
				{
					bolsao++;
					floodfill(x,y,j,i);
				}
			}
		}
		cout<<bolsao<<'\n';
		cin>>x>>y;
	}
}
